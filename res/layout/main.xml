<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
            android:text="@string/routes"
            />
    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="102dp" android:layout_gravity="center" android:layout_marginLeft="0dp">
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/origin"
                android:labelFor="@+id/destination"
                        android:id="@+id/textView"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center" />
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text="Philadelphia, PA"
                    android:id="@+id/origin" android:layout_column="1"
                android:layout_gravity="right" />
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/destination"
                android:labelFor="@+id/destination"
                    android:id="@+id/textView"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center" />
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text="Harrisburg, PA"
                    android:id="@+id/destination" android:layout_column="1"
                android:layout_gravity="right" />
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
            android:measureWithLargestChild="false"
            android:minHeight="50dp">

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:onClick="mapClick"
                    android:text="@string/submit"
                    android:id="@+id/button" android:layout_gravity="center|top"
                android:layout_column="1" />
        </TableRow>
    </TableLayout>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
        android:layout_marginTop="9dp"
        android:layout_gravity="center|bottom">
<EditText
        android:layout_margin="20dip"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:minLines="15"
               android:maxLines="15"
               android:textSize="12sp"
               android:editable="false"
               android:id="@+id/my_edit"/>
    </TableRow>
</LinearLayout>

